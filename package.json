{
  "name": "mediatracker",
  "version": "1.0.0",
  "bin": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "node --enable-source-maps esbuild.js --watch --start-server",
    "watch:build": "node --enable-source-maps esbuild.js --watch",
    "build": "lingui extract && lingui compile && node --enable-source-maps esbuild.js",
    "start": "node --enable-source-maps build/index.js start-server",
    "lint": "tsc --noEmit"
  },
  "description": "Self hosted media tracker for movies, tv shows, video games, books and audiobooks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bonukai/MediaTracker.git"
  },
  "keywords": [
    "self hosted"
  ],
  "author": {
    "name": "bonukai",
    "url": "https://github.com/bonukai"
  },
  "license": "MIT",
  "dependencies": {
    "@lingui/core": "^4.10.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "argon2": "^0.40.1",
    "better-sqlite3": "^9.6.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "csv-parse": "^5.5.5",
    "csv-stringify": "^6.4.6",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "nanoid": "^5.0.7",
    "pg": "^8.11.5",
    "sharp": "0.32.6",
    "zod": "^3.23.7",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@lingui/cli": "^4.10.1",
    "@lingui/format-json": "^4.10.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.1",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-istanbul": "^2.1.8",
    "esbuild": "^0.21.1",
    "glob": "^10.3.12",
    "openapi-types": "^12.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.5.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
