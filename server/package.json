{
  "name": "backend",
  "scripts": {
    "test": "cross-env DATABASE_PATH=:memory: jest",
    "build:server": "babel src --out-dir build --extensions .ts --delete-dir-on-start",
    "build:docs": "npm run build --prefix ../docs",
    "build:routes": "babel-node --extensions .ts scripts/generateRoutes.ts && babel-node --extensions .ts scripts/generateApi.ts && npm run build --prefix ../rest-api",
    "watch:routes": "nodemon --watch src --ignore src/generated --ext * --exec \"npm run build:routes",
    "watch:test": "cross-env DATABASE_PATH=:memory: jest --watchAll",
    "lingui:extract": "lingui extract",
    "lingui:compile": "lingui compile",
    "watch:build:server": "babel src --out-dir build --extensions .ts --watch",
    "watch:start": "nodemon --watch build --ignore *.test.js --ext * --exec \"node build/index.js\"",
    "build": "npm run lingui:extract && npm run lingui:compile && npm run build:routes && npm run build:server",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src && npm run check-types",
    "watch:lint": "nodemon --watch src --ext * --exec \"npm run lint\""
  },
  "dependencies": {
    "@lingui/core": "^3.13.2",
    "ajv": "^8.10.0",
    "argon2": "^0.28.4",
    "axios": "^0.25.0",
    "better-sqlite3": "^7.4.6",
    "chalk": "~4.1.2",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-fns": "^2.28.0",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "fast-xml-parser": "^4.0.2",
    "form-data": "^4.0.0",
    "fs-extra": "^10.0.0",
    "knex": "^1.0.2",
    "lodash": "^4.17.21",
    "make-plural": "^7.1.0",
    "nanoid": "^3.2.0",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "sharp": "^0.30.1",
    "typescript-routes-to-openapi-server": "^0.0.7",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@lingui/cli": "^3.13.2",
    "@lingui/macro": "^3.13.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/sharp": "^0.29.5",
    "@types/url-join": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "swagger-typescript-api": "^9.3.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "typescript-routes-to-openapi": "^0.0.26"
  },
  "engines": {
    "node": ">=14"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    }
  }
}
